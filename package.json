{
  "name": "lucrum-pos-middleware",
  "version": "1.2.0",
  "description": "Lucrum POS Middleware - Professional order management with WebSocket notifications",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "create-icon": "node scripts/create-icon.js",
    "build-exe": "npm run build && npm run create-icon && pkg dist/index.js --targets node18-win-x64 --output dist/lucrum-pos-middleware.exe"
  },
  "dependencies": {
    "better-sqlite3": "^8.7.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^8.1.0",
    "helmet": "^8.1.0",
    "socket.io": "^4.7.2",
    "winston": "^3.10.0"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/express": "^4.17.17",
    "@types/node": "^20.6.0",
    "pkg": "^5.8.1",
    "png-to-ico": "^3.0.1",
    "sharp": "^0.34.4",
    "to-ico": "^1.1.5",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.2.2"
  },
  "pkg": {
    "assets": [
      "node_modules/better-sqlite3/build/**/*",
      "assets/app-icon.ico",
      "assets/lucrum-logo.jpeg",
      ".env",
      "config.json"
    ],
    "scripts": [
      "dist/**/*.js"
    ],
    "targets": [
      "node18-win-x64"
    ]
  }
}
